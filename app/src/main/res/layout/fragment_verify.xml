<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".navigation.VerifyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_xacthuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Xác thực bảo hiểm"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_chuthich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bạn vui lòng điền vào các thông tin sau"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_xacthuc" />

        <EditText
            android:id="@+id/edt_chuxe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Chủ xe*"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_chuthich"
            app:layout_constraintWidth_percent="0.9" />

        <EditText
            android:id="@+id/edt_diachi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Địa chỉ"
            app:layout_constraintEnd_toEndOf="@id/edt_chuxe"
            app:layout_constraintStart_toStartOf="@id/edt_chuxe"
            app:layout_constraintTop_toBottomOf="@id/edt_chuxe" />

        <EditText
            android:id="@+id/edt_dienthoai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Điện thoại"
            app:layout_constraintEnd_toEndOf="@id/edt_chuxe"
            app:layout_constraintStart_toStartOf="@id/edt_chuxe"
            app:layout_constraintTop_toBottomOf="@id/edt_diachi" />

        <EditText
            android:id="@+id/edt_bienkiemsoat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Biển kiểm soát*"
            app:layout_constraintEnd_toEndOf="@id/edt_chuxe"
            app:layout_constraintStart_toStartOf="@id/edt_chuxe"
            app:layout_constraintTop_toBottomOf="@id/edt_dienthoai" />

        <EditText
            android:id="@+id/edt_sokhung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Số khung"
            app:layout_constraintEnd_toEndOf="@id/edt_chuxe"
            app:layout_constraintStart_toStartOf="@id/edt_chuxe"
            app:layout_constraintTop_toBottomOf="@id/edt_bienkiemsoat" />

        <EditText
            android:id="@+id/edt_somay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Số máy"
            app:layout_constraintEnd_toEndOf="@id/edt_chuxe"
            app:layout_constraintStart_toStartOf="@id/edt_chuxe"
            app:layout_constraintTop_toBottomOf="@id/edt_sokhung" />

        <EditText
            android:id="@+id/edt_loaixe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Loại xe"
            app:layout_constraintEnd_toEndOf="@id/edt_chuxe"
            app:layout_constraintStart_toStartOf="@id/edt_chuxe"
            app:layout_constraintTop_toBottomOf="@id/edt_somay" />

        <EditText
            android:id="@+id/edt_thoihanbh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:hint="Thời hạn bảo hiểm"
            android:textIsSelectable="false"
            app:layout_constraintEnd_toEndOf="@id/edt_chuxe"
            app:layout_constraintStart_toStartOf="@id/edt_chuxe"
            app:layout_constraintTop_toBottomOf="@id/edt_loaixe" />

        <EditText
            android:id="@+id/edt_tu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Từ"
            app:layout_constraintEnd_toEndOf="@id/edt_chuxe"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_thoihanbh"
            app:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/edt_den"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Đến"
            app:layout_constraintEnd_toEndOf="@id/edt_tu"
            app:layout_constraintStart_toStartOf="@id/edt_tu"
            app:layout_constraintTop_toBottomOf="@id/edt_tu" />

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imv_scanbh"
            android:adjustViewBounds="true"
            android:src="@drawable/img_scan"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_den"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:background="@drawable/rectangle_1"
            android:textAllCaps="false"
            android:text="Hoàn tất"
            app:layout_constraintEnd_toEndOf="@id/imv_scanbh"
            app:layout_constraintStart_toStartOf="@id/imv_scanbh"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/imv_scanbh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_down"
            app:layout_constraintEnd_toEndOf="@id/edt_loaixe"
            app:layout_constraintBottom_toBottomOf="@id/edt_loaixe"
            app:layout_constraintTop_toTopOf="@id/edt_loaixe"
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_calender"
            app:layout_constraintEnd_toEndOf="@id/edt_tu"
            app:layout_constraintBottom_toBottomOf="@id/edt_tu"
            app:layout_constraintTop_toTopOf="@id/edt_tu"
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_calender"
            app:layout_constraintEnd_toEndOf="@id/edt_den"
            app:layout_constraintBottom_toBottomOf="@id/edt_den"
            app:layout_constraintTop_toTopOf="@id/edt_den"
            android:layout_width="20dp"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>